<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <corners android:radius="0dp" />

            <solid android:color="#00444444" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="#10444444" />

            <corners android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="#10444444" />

            <corners android:radius="0dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#ffffffff" />

            <corners android:radius="0dp" />

            <stroke
                android:width="1dp"
                android:color="#d3d3d3" />

            <padding
                android:bottom="6dp"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp" />
        </shape>
    </item>

</layer-list>